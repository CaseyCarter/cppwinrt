<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <CppWinRT Condition="'$(AppContainerApplication)' != 'true' Or '$(CompileAsWinRT)' == 'false'">true</CppWinRT>
        <CppWinRT Condition="'$(CppWinRT)' == ''">false</CppWinRT>
    </PropertyGroup>

    <PropertyGroup Condition="$(CppWinRT)">
        <CanReferenceWinRT>true</CanReferenceWinRT>
        <GeneratedFilesDir Condition="'$(GeneratedFilesDir)' == ''">Generated Files\</GeneratedFilesDir>
    </PropertyGroup>

    <ItemDefinitionGroup Condition="$(CppWinRT)">
        <ClCompile>
            <AdditionalIncludeDirectories>%(AdditionalIncludeDirectories);$(GeneratedFilesDir)</AdditionalIncludeDirectories>
            <AdditionalOptions>/permissive- /await %(AdditionalOptions)</AdditionalOptions>
            <LanguageStandard Condition="'$(LanguageStandard)' == ''">stdcpp17</LanguageStandard>
        </ClCompile>
    </ItemDefinitionGroup>

</Project>
